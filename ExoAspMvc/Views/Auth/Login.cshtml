<h1 class="text-center">Login</h1>

<div class="text-center w-50 m-auto align-center bg-dark bg-opacity-50 rounded-2">

    <div class="text-center w-75 m-auto bg-dark bg-opacity-50 rounded-2 p-3">

        <div class="bg-transparent rounded-2 p-3">

            <form asp-action="Login" method="post">

            <div class="form-group">
                <label class="w-100 text-center" for="email">Email</label>
                <input class="w-50 m-auto form-control text-center" id="Email" name="Email" type="text" />
            </div>

            <div class="form-group">
                <label class="w-100 text-center" for="password">Password</label>
                <input class="w-50 m-auto form-control text-center" id="Password" name="Password" type="password" />
            </div>
                <button class="btn btn-danger m-2" type="submit" >Login</button>
            </form>

        </div>

    <div class="text-center p-3">
            <a class="btn btn-danger m-2" asp-controller="Home" asp-action="Index">Forget info</a>
        <a class="btn btn-danger m-2" asp-controller="Home" asp-action="Register">Register</a>
    </div>

</div>

